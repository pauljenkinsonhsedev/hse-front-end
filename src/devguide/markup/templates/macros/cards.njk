{% macro cards(components) %}
    <div class="component-container block-content">
        {% for elem in components.objects %}
            <h1>{{elem.title}}</h1>
            <p>{{elem.copy}}</p>
            <div class="block-content__inner"  data-span="{{elem.grid}}">
                {% for elem in components.childObjects %}
                    <div class="card" data-span="{{elem.grid}}">
                        <h2>{{elem.title}}</h2>
                        <p>{{elem.copy}}</p>

                        {% for elem in elem.childObjects %}
                            <div class="card" data-span="{{elem.grid}}">
                                <h4>{{elem.title}}</h4>
                                <p>{{elem.copy}}</p>
                            </div>
                        {% endfor %}
                    </div>
                {% endfor %}
            {% endfor %}
        </div>
    </div>
{% endmacro %}